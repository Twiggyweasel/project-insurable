<div class="col s12 m7 l5 offset-m3 offset-l3">
 <div class="form-holder">
    <h2>Edit Property</h2>
    <%= form_for @home do |f| %>
    <div class="input-field">
      <i class="material-icons prefix">label_outline</i>
      <%= f.label :name, "Property Name" %>
      <%= f.text_field :name %>
    </div>
    <div class="input-field">
      <i class="material-icons prefix">date_range</i>
      <%= f.label :purchase_date, "Purchase Date" %>
      <%= f.date_field :purchase_date, {class: "datepicker"} %>
    </div>
    <div class="input-field">
      <i class="material-icons prefix">attach_money</i>
      <%= f.label :value, "Property's Value" %>
      <%= f.number_field :value %>
    </div>
      <%= f.submit class: "waves-effect waves-light btn" %>
    <% end %>
 </div>



</div>

<script>
$('.datepicker').pickadate({
 selectMonths: true, // Creates a dropdown to control month
 selectYears: 15 // Creates a dropdown of 15 years to control year
});
</script>
